<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.branter.jiadongyan.branter.MyAccountActivity"
    tools:showIn="@layout/activity_my_account">

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="194dp"
        android:layout_height="191dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp" />

    <TextView
        android:id="@+id/username_tag"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:text="Username: Example"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.519"
        android:layout_marginStart="95dp" />

    <TextView
        android:id="@+id/gender_tag"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:text="Gender: Example"
        android:layout_marginLeft="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/username_tag"
        android:layout_marginTop="43dp" />

    <TextView
        android:id="@+id/birthday_tag"
        android:layout_width="220dp"
        android:layout_height="43dp"
        android:text="Birthday: Example"
        android:layout_marginLeft="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="95dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/gender_tag" />

    <TextView
        android:id="@+id/hostnumber_tag"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:text="Host XX events"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp" />
    <TextView
        android:id="@+id/joinnumber_tag"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:text="Join XX events"
        android:layout_marginLeft="137dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp" />

    <TextView
        android:id="@+id/postnumber_tag"
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:text="Post XX tweets"
        android:layout_marginLeft="258dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp" />

    <Button
        android:id="@+id/profile_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/profile_back_button"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.311"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="31dp" />

    <Button
        android:id="@+id/profile_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginRight="46dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="31dp" />


</android.support.constraint.ConstraintLayout>
