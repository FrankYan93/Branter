<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.branter.jiadongyan.branter.CreateEventActivity"
    tools:ignore="MergeRootFrame" >


    <!-- 底部按钮 -->
    <RelativeLayout
        android:id="@+id/Layout_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center" >

        <Button
            android:id="@+id/choose_location"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Create"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Colored" />

        <Button
            android:id="@+id/buttoncancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/buttonpublish"
            android:text="Cancel"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />
    </RelativeLayout>
    <!-- 显示图片 -->
    <RelativeLayout
        android:id="@+id/Content_Layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/Layout_bottom"
        android:layout_below="@id/Layout_top"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >
            <!-- 设置运行多行 设置圆角图形 黑色字体-->
            <Button
                android:id="@+id/bSearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/location"
                android:padding="16dp"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/eventTitle"
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:textColor="#000000"
                android:layout_margin="12dp"
                android:textSize="20sp"
                android:hint="Title"
                android:maxLength="20"
                android:singleLine="false" />

            <EditText
                android:id="@+id/eventContent"
                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_width="fill_parent"
                android:layout_height="78dp"
                android:layout_margin="12dp"
                android:hint="Description"
                android:maxLength="100"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/startTime"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/startDate"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:text="Start Date"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/startDateChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/startDate"
                    android:text="Pick up Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/endTime"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="12dp"
                    android:text="End date"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:wei/>

                <Button
                    android:id="@+id/endDateChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/endDate"
                    android:text="Pick up Date"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button" />
            </LinearLayout>

            <!-- 网格显示图片 行列间距5dp 每列宽度90dp -->
            <GridView
                android:id="@+id/gridView1"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:background="#EFDFDF"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"></GridView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Upload at most 3 pics and click for delete"
                android:gravity="center" />




        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>