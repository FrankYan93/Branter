<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.branter.jiadongyan.branter.CreateEventActivity"
    tools:ignore="MergeRootFrame" >

    <!-- 顶部添加文字 -->
    <RelativeLayout
        android:id="@+id/Layout_top"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:gravity="center">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Create Event Info" />
    </RelativeLayout>
    <!-- 底部按钮 -->
    <RelativeLayout
        android:id="@+id/Layout_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center" >
        <Button
            android:id="@+id/buttonpublish"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="20sp"
            android:text="Create" />
        <Button
            android:id="@+id/buttoncancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/buttonpublish"
            android:textSize="20sp"
            android:text="Cancel" />
    </RelativeLayout>
    <!-- 显示图片 -->
    <RelativeLayout
        android:id="@+id/Content_Layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/Layout_bottom"
        android:layout_below="@id/Layout_top"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >
            <!-- 设置运行多行 设置圆角图形 黑色字体-->

            <EditText
                android:id="@+id/eventTitle"
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:textColor="#000000"
                android:layout_margin="12dp"
                android:textSize="20sp"
                android:hint="Title"
                android:maxLength="20"
                android:singleLine="false"
                android:background="@drawable/editview_shape" />

            <EditText
                android:id="@+id/eventContent"
                android:layout_height="78dp"
                android:layout_width="fill_parent"
                android:textColor="#000000"
                android:layout_margin="12dp"
                android:textSize="20sp"
                android:hint="Description of your event"
                android:maxLength="100"
                android:singleLine="false"
                android:background="@drawable/editview_shape" />

            <RelativeLayout
                android:id="@+id/startTime"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center" >
                <TextView
                    android:id="@+id/startDate"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:textColor="#000000"
                    android:layout_margin="12dp"
                    android:textSize="20sp"
                    android:text="Start Date"
                    android:background="@drawable/editview_shape" />
                <Button
                    android:id="@+id/startDateChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/startDate"
                    android:textSize="20sp"
                    android:text="Pick up Date" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/endTime"
                android:layout_alignParentBottom="true"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center" >
                <TextView
                    android:id="@+id/endDate"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:textColor="#000000"
                    android:layout_margin="12dp"
                    android:textSize="20sp"
                    android:text="End date"
                    android:background="@drawable/editview_shape" />
                <Button
                    android:id="@+id/endDateChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/endDate"
                    android:textSize="20sp"
                    android:text="Pick up Date" />
            </RelativeLayout>

            <!-- 网格显示图片 行列间距5dp 每列宽度90dp -->
            <GridView
                android:id="@+id/gridView1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#EFDFDF"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:numColumns="4"
                android:columnWidth="90dp"
                android:stretchMode="columnWidth"
                android:gravity="center" >
            </GridView>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Upload at most 3 pics and click for delete"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>